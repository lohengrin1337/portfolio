{% include 'incl/header.twig' %}

<body class="body">
    {% include 'incl/nav.twig' %}

    <div class="single-page">
        <main class="main">
                {{ content }}
        </main>
        <aside class="sidebar">
            <h4>Teknologier</h4>
            <ul>
                {% for page in pages("technology") if not page.hidden %}
                    <li><a {% if page.id==current_page.id %} class="active" {% endif %}
                        href="{{ page.url }}">{{ page.title }}</a></li>
                {% endfor %}
            </ul>
        </aside>
    </div>

    {% include 'incl/footer.twig' %}
</body>

</html>
